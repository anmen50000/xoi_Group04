<div class="mt-4">
  <style>
    th{
      color: rgb(150, 150, 150);
    }
  </style>
    <div>
      <h3>Danh sách thông tin nhân viên</h3>
      <a href="/me/trash/courses">Thùng rác</a>
    </div>
    <table  id="tabvjp"  class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên nhân viên</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Giới tính</th>
                <th scope="col" colspan="2">Gmail</th>
            </tr>
            <a href="/courses/create">Thêm Thông tin nhân viên</a>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.address}}</td>
                <td>{{this.gender}}</td>
                <td>{{this.gmail}}</td>
                <td>
                    <a href="/courses/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                    <a href="" class="btn btn-link"data-toggle="modal" data-id="{{this._id}}" data-target="#delete-course-modal">Xóa</a>
                </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5", class="text-center">Chưa có thông tin nhân viên nào.<a href="/courses/create">Thêm thông tin</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!-- Conform delete course --}}

<div id="delete-course-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa thông tin</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Chắc chắn xóa thông tin của nhân viên này ?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa</button>
        <button  type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>
{{!-- delete --}}
    <form name="delete-course-from" method="POST"></form>
<script>
    document.addEventListener('DOMContentLoaded', function(){
      var courseId;
      var deleteFrom = document.forms['delete-course-from'];
      var btnDeleteCourse = document.getElementById('btn-delete-course');
        $('#delete-course-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
        });
            btnDeleteCourse.onclick = function(){
              deleteFrom.action = '/courses/' + courseId + '?_method=DELETE';
              deleteFrom.submit();
            }
    }); 
</script>